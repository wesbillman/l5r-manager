<h2 class="title">New Deck</h2>
<% form_for(@deck, :html => { :class => "form" }) do |f| %>
  <%= f.error_messages %>
		<div class="inner">
    <%= f.label :name, "Please enter a name for your deck" %><br />
    <%= f.text_field :name, :class => "text_field" %>
	  <%= f.hidden_field :user_id, :value => current_user.id %>
		</div>
    <p><%= f.submit "Create", :class => "button" %> or <%= link_to 'Cancel', decks_path %></p>
<% end %>