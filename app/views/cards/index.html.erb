<% if logged_in? %>
	<%= link_to 'Add new card', new_card_path %>
<% else %>
	Please <%= link_to 'login', login_url %> to create new cards
<% end %>
<div id="cards">
<ul>
<% for card in @cards %>
		<li class="card">
			<%= link_to image_tag(card.photo.url(:avatar)), card %>
			<%= link_to card.name, card %>
			Created by <%= h card.user.login%>
			<%=card.created_at.strftime(" on %m/%d/%Y") %><br />
			<% if admin? %>
				<%= link_to 'Edit', edit_card_path(card) %> | 
				<%= link_to 'Delete', card, :confirm => 'Are you sure?', :method => :delete %>
			<% end %>
		</li>
<% end %>
</ul>
</div>
