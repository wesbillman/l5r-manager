
<div class="columns">
  <div class="column left">
		<p>
		  <%= label(:card, :name, "Name") %><br />
		  <%= text_field(:card, :name, :class => "text_field") %>
		</p>
		<p>
		  <%= label(:card, :desc, "Description") %><br />
		  <%= text_area(:card, :desc, :rows => 10, :class => "text_area") %>
		</p>
		<p>
		  <%= label(:card, :ability) %><br />
		  <%= text_area(:card, :ability, :rows => 10, :class => "text_area") %>
		</p>
		<p>
			<%= label(:card, :photo, "Photo") %><br />
			<%= f.file_field :photo %>
		</p>
		<p>
		  <%= label(:card, :user_id, "Created by") %> - <%= h current_user.login %>
		  <%= hidden_field(:card, :user_id, :value => current_user.id) %>
		</p>
	</div>
	<div class="column right">
		<p>
		  <%= label(:card, :card_type_id) %><br />
			<%= collection_select(:card, :card_type_id , @card_types, "id", "name", {:include_blank => true}) %>
		</p>
		<p>
		  <%= label(:card, :clan_id) %><br />
			<%= collection_select(:card, :clan_id , @clans, "id", "name", {:include_blank => true}) %>
		</p>
		<p>
		  <%= label(:card, :force) %><br />
		  <%= text_field(:card, :force, :class => "text_field") %>
		</p>
		<p>
		  <%= label(:card, :chi) %><br />
		  <%= text_field(:card, :chi, :class => "text_field") %>
		</p>
		<p>
		  <%= label(:card, :honor_requirement) %><br />
		  <%= text_field(:card, :honor_requirement, :class => "text_field") %>
		</p>
		<p>
		  <%= label(:card, :gold_cost) %><br />
		  <%= text_field(:card, :gold_cost, :class => "text_field") %>
		</p>
		<p>
		  <%= label(:card, :prov_str) %><br />
		  <%= text_field(:card, :prov_str, :class => "text_field") %>
		</p>
		<p>
		  <%= label(:card, :gold_prod) %><br />
		  <%= text_field(:card, :gold_prod, :class => "text_field") %>
		</p>
		<p>
		  <%= label(:card, :start_honor) %><br />
		  <%= text_field(:card, :start_honor, :class => "text_field") %>
		</p>
		<p>
		  <%= label(:card, :personal_honor) %><br />
		  <%= text_field(:card, :personal_honor, :class => "text_field") %>
		</p>
		<p>
		  <%= label(:card, :focus) %><br />
		  <%= text_field(:card, :focus, :class => "text_field") %>
		</p>
	</div>
</div>

